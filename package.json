{
  "name": "backend-nodejs",
  "version": "1.0.0",
  "requires": true,
  "author": "",
  "description": "RESTful API with Node.js, TypeScript, and PostgreSQL",
  "keywords": [
    "node",
    "typescript",
    "postgres",
    "api",
    "jwt",
    "auth"
  ],
  "license": "ISC",
  "main": "dist/app.js",
  "packages": {},
  
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "sequelize": "^6.36.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4"
  },
  
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.0",
    "@types/sequelize": "^4.28.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/app.ts",
      "!src/utils/seedDatabase.ts"
    ],
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "seed": "ts-node src/utils/seedDatabase.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:init": "ts-node src/utils/dbInit.ts"
  }
}